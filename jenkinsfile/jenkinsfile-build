pipeline {
    agent any
    tools {
        nodejs 'node'
        jfrog 'jfrog-cli'
        }
    

    stages {
        //stage('Build') {
           // steps {
            //    sh 'npm install'
           // }
        //}
        stage('Exec npm commands') {
			steps {
				// Configure npm project's repositories
				jf 'npm-config --repo-resolve nodejs-npm --repo-deploy nodejs-npm'

				// Install dependencies
				jf 'npm install'

				// Pack and deploy the npm package
				jf 'npm publish'
			}
		}
        stage('Publish build info') {
			steps {
				jf 'rt build-publish'
			}
		}
	stage('Fetch Vulnerability report from JFrog XRay scanner'){
			steps{
				jfrog rt xr get vulnerabilities myapp
			}
		}
    }
}
